<h1>coach/new</h1>

<%= form_for @coach do |f| %>

  <!-- coach info -->
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>

  <%= f.label :email %><br>
  <%= f.text_field :email %><br>

  <%= f.label :password %><br>
  <%= f.text_field :password %><br>
  
  <!-- choose a team (add create option) -->
  <%= f.collection_select :team_id, Team.all, :id, :name %>


  <%= f.submit %>
<% end %>